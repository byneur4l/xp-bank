{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    // "experimentalDecorators": true,

    /* Modules */
    "types": ["node"],
    "module": "commonjs",
    // "resolveJsonModule": true,
    // "moduleResolution": "node",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@models/*": ["./src/models/*"],
      "@services/*": ["./src/services/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@utils/*": ["./src/utils/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@connection/*": ["./src/connection/*"],
      "@data/*": ["./data/*"]
    },
    "typeRoots": [
      "./node_modules/@types/*",
      "./src/@types/*"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "exclude": [
    "./node_modules/*",
  ],
  "include": [
    "./src/**/*.ts",
    "./prisma/**/*.ts"
  ],
}
